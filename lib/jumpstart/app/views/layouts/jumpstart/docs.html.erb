<!DOCTYPE html>
<html class="docs-layout <%= class_names("jumpstart h-full antialiased", "jumpstart-dark": current_user&.dark_theme?) %>" lang="<%= I18n.locale %>">
  <head>
    <title>Jumpstart Docs | <%= yield :section_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= viewport_meta_tag %>

    <% if current_user&.system_theme? %><script>document.documentElement.classList.toggle("dark", window.matchMedia('(prefers-color-scheme: dark)').matches)</script><% end %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>

    <%# Be sure to add your own custom favicons %>
    <%= render "favicons" %>
    <%= render "payments_dependencies" %>

    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">

    <script>
      document.addEventListener("turbo:load", function() {
        // Theme toggling logic
        const themeRadios = document.querySelectorAll('input[name="theme"]');
        const currentTheme = ['jumpstart', 'dark', 'juicy'].find(cls => document.documentElement.classList.contains(cls)) || null;

        themeRadios.forEach(radio => {
          radio.checked = (radio.value === currentTheme) || (radio.value === 'light' && currentTheme === null);

          radio.addEventListener('change', function() {
            document.documentElement.classList.remove('jumpstart', 'dark', 'juicy');
            document.documentElement.classList.add(this.value);
          });
        });
      });
    </script>

    <%= yield :head %>
  </head>
  <body class="h-full overflow-x-hidden font-sans font-normal leading-normal">
    <%= render partial: "flash" %>

    <%= render partial: "jumpstart/docs/top_nav" %>

    <div class="docs-container md:flex">
      <%= render partial: "jumpstart/docs/side_nav" %>

      <div class="docs-main">
        <header class="doc-header">
          <h1><%= yield :section_title %></h1>
          <% if content_for :section_subtitle %>
            <p><%= yield :section_subtitle %></p>
          <% end %>
        </header>

        <main class="doc-body">
          <%= yield %>
        </main>
      </div>
    </div>

  </body>
</html>
