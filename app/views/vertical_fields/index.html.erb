<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "&larr; Back to Vertical".html_safe, vertical_path(@vertical), class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" %>
  </div>

  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Fields for <%= @vertical.name %></h1>
    <div class="flex space-x-2">
      <%= link_to "Add New Field", new_vertical_vertical_field_path(@vertical), class: "btn btn-primary", data: { turbo_frame: "modal" } %>
    </div>
  </div>

  <% if @fields.any? %>
    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
      <div id="vertical_fields" class="field-list" data-controller="sortable" data-sortable-resource-url-value="/verticals/<%= @vertical.id %>/vertical_fields">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th scope="col" class="w-2/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Name</th>
              <th scope="col" class="w-1/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Type</th>
              <th scope="col" class="w-4/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Validation</th>
              <th scope="col" class="w-1/12 px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Required</th>
              <th scope="col" class="w-1/12 px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">PII</th>
              <th scope="col" class="w-3/12 px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody id="sortable-fields" class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
            <% @fields.each do |field| %>
              <%= render partial: "vertical_fields/field", locals: { field: field, vertical: @vertical } %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg p-6 text-center">
      <p class="text-gray-500 dark:text-gray-400">No fields defined for this vertical yet.</p>
      <p class="mt-2">
        <%= link_to "Add your first field", new_vertical_vertical_field_path(@vertical), class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300", data: { turbo_frame: "modal" } %>
      </p>
    </div>
  <% end %>

  <div class="mt-8">
    <h2 class="text-xl font-medium text-gray-900 dark:text-white mb-4">Standard Fields</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-4">These standard fields are available for all verticals and don't need to be defined explicitly:</p>

    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Name</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Type</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Description</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">first_name</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">text</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">Lead's first name</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">last_name</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">text</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">Lead's last name</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">email</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">email</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">Lead's email address</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">phone</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">phone</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">Lead's phone number</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">address</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">text</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">Street address</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">city</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">text</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">City</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">state</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">text</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">State or province</td>
          </tr>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">postal_code</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">text</td>
            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">ZIP or postal code</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>