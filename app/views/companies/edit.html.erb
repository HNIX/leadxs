<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to "&larr; Back to Company".html_safe, company_path(@company), class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" %>
  </div>

  <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Company</h1>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-700 px-4 py-5 sm:p-6">
      <%= render "form", company: @company %>
    </div>
  </div>
</div>