<% form_builder_edit_breadcrumbs(@campaign, @form_builder) %>

<% render_context_header(
  title: "Edit Form: #{@form_builder.name}",
  subtitle: "Update form configuration and appearance settings",
  back_path: campaign_form_builder_path(@campaign, @form_builder),
  back_text: "Back to Form Builder"
) if defined?(render_context_header) %>

<div class="container mx-auto py-6">
  <div class="mb-4">
    <p class="text-gray-600 dark:text-gray-300">
      Update the form configuration and appearance settings. 
      To modify form fields and structure, use the form builder interface.
    </p>
  </div>

  <%= render "form", campaign: @campaign, form_builder: @form_builder %>
</div>