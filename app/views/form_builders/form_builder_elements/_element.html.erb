<li data-form-builder-target="element" 
    id="element_<%= element.id %>"
    data-element-id="<%= element.id %>" 
    data-edit-url="<%= edit_campaign_form_builder_form_builder_element_path(element.form_builder.campaign, element.form_builder, element) %>" 
    data-delete-url="<%= campaign_form_builder_form_builder_element_path(element.form_builder.campaign, element.form_builder, element) %>" 
    class="border border-gray-200 rounded-lg bg-gray-50 p-3 flex items-center justify-between">
  <div class="flex items-center">
    <div class="drag-handle cursor-move mr-2 text-gray-400">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
      </svg>
    </div>
    
    <div>
      <span class="font-medium"><%= element.element_type.humanize %></span>
      <% if element.campaign_field %>
        <span class="ml-2 text-sm text-gray-500"><%= element.campaign_field.label %></span>
      <% end %>
    </div>
  </div>
  
  <div class="flex items-center space-x-2">
    <button type="button" data-action="form-builder#togglePreview" class="text-gray-500 hover:text-gray-700">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    </button>
    
    <button type="button" data-action="form-builder#editElement" class="text-blue-500 hover:text-blue-700">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
    </button>
    
    <button type="button" data-action="form-builder#deleteElement" class="text-red-500 hover:text-red-700">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    </button>
  </div>
</li>

<div data-form-builder-target="preview" data-element-id="<%= element.id %>" class="hidden mt-2 mb-4 ml-8 p-3 bg-white border border-gray-200 rounded-lg">
  <% case element.element_type %>
  <% when 'header' %>
    <div class="rich-text-preview">
      <%= element.properties['content'].html_safe %>
    </div>
  <% when 'paragraph' %>
    <div class="text-preview">
      <%= element.properties['content'].html_safe %>
    </div>
  <% when 'text' %>
    <div class="form-field-preview">
      <label class="block text-sm font-medium text-gray-700 mb-1"><%= element.properties['label'] %></label>
      <input type="text" class="block w-full rounded-md border-gray-300 shadow-sm" placeholder="<%= element.properties['placeholder'] %>" disabled>
      <% if element.properties['help_text'].present? %>
        <p class="mt-1 text-xs text-gray-500"><%= element.properties['help_text'] %></p>
      <% end %>
    </div>
  <% when 'email' %>
    <div class="form-field-preview">
      <label class="block text-sm font-medium text-gray-700 mb-1"><%= element.properties['label'] %></label>
      <input type="email" class="block w-full rounded-md border-gray-300 shadow-sm" placeholder="<%= element.properties['placeholder'] %>" disabled>
    </div>
  <% when 'checkbox' %>
    <div class="form-field-preview">
      <div class="flex items-center">
        <input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" disabled>
        <label class="ml-2 block text-sm text-gray-700"><%= element.properties['label'] %></label>
      </div>
    </div>
  <% when 'consent' %>
    <div class="form-field-preview">
      <div class="flex items-center">
        <input type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" disabled>
        <label class="ml-2 block text-sm text-gray-700"><%= element.properties['content'] %></label>
      </div>
    </div>
  <% when 'submit' %>
    <div class="form-field-preview">
      <button type="button" class="px-4 py-2 bg-indigo-600 text-white rounded-md shadow-sm" disabled><%= element.properties['text'] || 'Submit' %></button>
    </div>
  <% when 'textarea' %>
    <div class="form-field-preview">
      <label class="block text-sm font-medium text-gray-700 mb-1"><%= element.properties['label'] %></label>
      <textarea class="block w-full rounded-md border-gray-300 shadow-sm" placeholder="<%= element.properties['placeholder'] %>" disabled></textarea>
    </div>
  <% when 'select', 'radio' %>
    <div class="form-field-preview">
      <label class="block text-sm font-medium text-gray-700 mb-1"><%= element.properties['label'] %></label>
      <select class="block w-full rounded-md border-gray-300 shadow-sm" disabled>
        <option value="">Select an option</option>
      </select>
    </div>
  <% when 'phone' %>
    <div class="form-field-preview">
      <label class="block text-sm font-medium text-gray-700 mb-1"><%= element.properties['label'] %></label>
      <input type="tel" class="block w-full rounded-md border-gray-300 shadow-sm" placeholder="<%= element.properties['placeholder'] %>" disabled>
    </div>
  <% when 'date' %>
    <div class="form-field-preview">
      <label class="block text-sm font-medium text-gray-700 mb-1"><%= element.properties['label'] %></label>
      <input type="date" class="block w-full rounded-md border-gray-300 shadow-sm" disabled>
    </div>
  <% when 'divider' %>
    <div class="form-field-preview">
      <hr class="my-2 border-gray-300">
    </div>
  <% else %>
    <div class="form-field-preview">
      <p class="text-sm font-medium"><%= element.element_type.humanize %> field</p>
      <p class="text-xs text-gray-500">Label: <%= element.properties['label'] %></p>
    </div>
  <% end %>
</div>