<% form_builder_element_edit_breadcrumbs(@campaign, @form_builder, @element) %>

<% render_context_header(
  title: "Edit Form Element",
  subtitle: "Modify the properties of this form element",
  back_path: campaign_form_builder_path(@campaign, @form_builder),
  back_text: "Back to Form Builder"
) if defined?(render_context_header) %>

<div class="container mx-auto py-6">
  <div class="mb-4">
    <p class="text-gray-600 dark:text-gray-300">
      Modify the properties of this form element. Changes will be immediately visible in your form preview.
    </p>
  </div>

  <%= render "form", campaign: @campaign, form_builder: @form_builder, element: @element %>
</div>