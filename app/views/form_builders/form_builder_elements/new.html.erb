<% form_builder_element_new_breadcrumbs(@campaign, @form_builder) %>

<% render_context_header(
  title: "Add Form Element",
  subtitle: "Add a new element to your form",
  back_path: campaign_form_builder_path(@campaign, @form_builder),
  back_text: "Back to Form Builder"
) if defined?(render_context_header) %>

<div class="container mx-auto py-6">
  <div class="mb-4">
    <p class="text-gray-600 dark:text-gray-300">
      Add a new element to your form. Elements are displayed in the order of their position values.
    </p>
  </div>

  <%= render "form", campaign: @campaign, form_builder: @form_builder, element: @element %>
</div>