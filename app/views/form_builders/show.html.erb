<div data-controller="form-builder">
  <script>
    // Debug script to log drag and drop events
    document.addEventListener('DOMContentLoaded', function() {
      console.log("Form builder initialized - Debug mode");
      
      // Log when controller connects
      document.addEventListener('form-builder:connect', function() {
        console.log("Form builder controller connected");
      });
      
      // Monitor drag events globally
      document.addEventListener('dragstart', function(e) {
        console.log("Drag started:", e.target);
      });
      
      document.addEventListener('dragover', function(e) {
        // Don't log this constantly to avoid console spam
      });
      
      document.addEventListener('drop', function(e) {
        console.log("Drop event:", e.target);
      });
    });
  </script>
  
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold"><%= @form_builder.name %></h1>
    
    <div class="flex space-x-2">
      <% case @form_builder.status %>
      <% when 'draft' %>
        <%= button_to "Activate", toggle_status_campaign_form_builder_path(@campaign, @form_builder, status: 'active'), method: :patch, class: "btn btn-sm btn-success" %>
      <% when 'active' %>
        <%= button_to "Pause", toggle_status_campaign_form_builder_path(@campaign, @form_builder, status: 'paused'), method: :patch, class: "btn btn-sm btn-warning" %>
      <% when 'paused' %>
        <%= button_to "Activate", toggle_status_campaign_form_builder_path(@campaign, @form_builder, status: 'active'), method: :patch, class: "btn btn-sm btn-success" %>
      <% when 'archived' %>
        <%= button_to "Restore", toggle_status_campaign_form_builder_path(@campaign, @form_builder, status: 'draft'), method: :patch, class: "btn btn-sm btn-secondary" %>
      <% end %>
      
      <%= link_to "Edit Settings", edit_campaign_form_builder_path(@campaign, @form_builder), class: "btn btn-sm btn-primary" %>
      <%= link_to "Preview", preview_campaign_form_builder_path(@campaign, @form_builder), class: "btn btn-sm btn-white", target: "_blank", data: { action: "form-builder#previewForm" } %>
      <%= link_to "Embed Codes", embed_codes_campaign_form_builder_path(@campaign, @form_builder), class: "btn btn-sm btn-white" %>
    </div>
  </div>
  
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Form status card -->
    <div class="lg:col-span-4 bg-white shadow rounded-lg overflow-hidden">
      <div class="p-4 sm:px-6 flex justify-between items-center border-b border-gray-200">
        <div>
          <h2 class="text-lg font-medium text-gray-900">Form Status</h2>
          <p class="text-sm text-gray-500">Current settings and statistics</p>
        </div>
        
        <div class="flex items-center space-x-4">
          <div class="text-right">
            <span class="block text-sm font-medium text-gray-500">Status</span>
            <% case @form_builder.status %>
            <% when 'active' %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Active</span>
            <% when 'draft' %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Draft</span>
            <% when 'paused' %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Paused</span>
            <% when 'archived' %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Archived</span>
            <% end %>
          </div>
          
          <div class="text-right">
            <span class="block text-sm font-medium text-gray-500">Elements</span>
            <span class="text-lg font-semibold"><%= @elements.count %></span>
          </div>
          
          <div class="text-right">
            <span class="block text-sm font-medium text-gray-500">Submissions</span>
            <span class="text-lg font-semibold"><%= @form_builder.submissions.count %></span>
          </div>
          
          <div class="text-right">
            <span class="block text-sm font-medium text-gray-500">Created</span>
            <span class="text-sm font-medium"><%= l @form_builder.created_at.to_date %></span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Form builder interface -->
    <div class="lg:col-span-3">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="p-4 sm:px-6 flex justify-between items-center border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Form Builder</h2>
          
          <div class="flex space-x-2">
            <%= link_to "Add Element", new_campaign_form_builder_form_builder_element_path(@campaign, @form_builder), class: "btn btn-sm btn-primary" %>
          </div>
        </div>
        
        <div class="p-4">
          <div 
            data-form-builder-target="canvas" 
            data-positions-url="<%= bulk_update_positions_campaign_form_builder_form_builder_elements_path(@campaign, @form_builder) %>" 
            data-new-element-url="<%= new_campaign_form_builder_form_builder_element_path(@campaign, @form_builder) %>"
            class="border-2 border-dashed border-gray-300 rounded-lg p-4 min-h-[400px]">
            <% if @elements.any? %>
              <ul id="form-elements-container" class="space-y-2">
                <% @elements.each do |element| %>
                  <%= render 'form_builders/form_builder_elements/element', element: element %>
                <% end %>
              </ul>
            <% else %>
              <ul id="form-elements-container" class="space-y-2 hidden">
                <!-- Empty container for Turbo Stream updates -->
              </ul>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No form elements</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by adding your first form element.</p>
                <div class="mt-6">
                  <%= link_to "Add Element", new_campaign_form_builder_form_builder_element_path(@campaign, @form_builder), class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Form element palette -->
    <div class="lg:col-span-1">
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="p-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Elements</h2>
          <p class="text-sm text-gray-500">Drag elements to add them to your form</p>
          <div id="drag-debug-status" class="mt-2 p-2 bg-gray-100 text-xs rounded hidden">
            <div class="font-medium">Drag status: <span id="drag-status">Initializing...</span></div>
            <div class="mt-1">Last action: <span id="last-action">None</span></div>
            <button type="button" id="test-drag" class="mt-2 px-2 py-1 bg-blue-500 text-white text-xs rounded">Test drag event</button>
          </div>
          <script>
            document.addEventListener('DOMContentLoaded', function() {
              const debugStatus = document.getElementById('drag-debug-status');
              const dragStatus = document.getElementById('drag-status');
              const lastAction = document.getElementById('last-action');
              const testButton = document.getElementById('test-drag');
              
              if (debugStatus) {
                // Only show in development
                if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
                  debugStatus.classList.remove('hidden');
                  dragStatus.textContent = 'Ready';
                  
                  testButton.addEventListener('click', function() {
                    lastAction.textContent = 'Testing URL redirection...';
                    
                    // Get the canvas element
                    const canvas = document.querySelector('[data-form-builder-target="canvas"]');
                    if (canvas) {
                      const newElementUrl = canvas.dataset.newElementUrl;
                      lastAction.textContent = newElementUrl ? 
                        `Found URL: ${newElementUrl}` : 
                        'URL not found in canvas data!';
                    } else {
                      lastAction.textContent = 'Canvas not found!';
                    }
                  });
                }
              }
            });
          </script>
        </div>
        
        <div data-form-builder-target="palette" class="p-4 space-y-2">
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Form Fields</h3>
          <div data-draggable data-element-type="text" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Text Input</span>
          </div>
          
          <div data-draggable data-element-type="textarea" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
            <span>Text Area</span>
          </div>
          
          <div data-draggable data-element-type="email" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span>Email</span>
          </div>
          
          <div data-draggable data-element-type="phone" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span>Phone</span>
          </div>
          
          <div data-draggable data-element-type="select" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
            <span>Dropdown</span>
          </div>
          
          <div data-draggable data-element-type="checkbox" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Checkbox</span>
          </div>
          
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mt-4 mb-2">Content</h3>
          <div data-draggable data-element-type="header" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
            <span>Header</span>
          </div>
          
          <div data-draggable data-element-type="paragraph" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            <span>Paragraph</span>
          </div>
          
          <div data-draggable data-element-type="divider" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14" />
            </svg>
            <span>Divider</span>
          </div>
          
          <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mt-4 mb-2">Form Controls</h3>
          <div data-draggable data-element-type="consent" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Consent Checkbox</span>
          </div>
          
          <div data-draggable data-element-type="submit" class="p-2 bg-gray-50 border border-gray-200 rounded-md text-sm flex items-center cursor-grab hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Submit Button</span>
          </div>
        </div>
      </div>
      
      <div class="mt-6 bg-white shadow rounded-lg overflow-hidden">
        <div class="p-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Submissions</h2>
        </div>
        
        <div class="p-4">
          <div class="text-center">
            <h3 class="text-lg font-medium text-gray-900 mb-1"><%= @form_builder.submissions.count %></h3>
            <p class="text-sm text-gray-500">Total Submissions</p>
          </div>
          
          <div class="mt-4">
            <%= link_to "View Submissions", campaign_form_builder_form_submissions_path(@campaign, @form_builder), class: "w-full btn btn-white text-center" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="mt-6">
    <div class="flex space-x-2">
      <%= link_to "Back to Forms", campaign_form_builders_path(@campaign), class: "text-indigo-600 hover:text-indigo-900" %>
      <span class="text-gray-300">|</span>
      <%= link_to "Back to Campaign", campaign_path(@campaign), class: "text-indigo-600 hover:text-indigo-900" %>
    </div>
  </div>
</div>