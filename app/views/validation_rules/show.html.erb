<% content_for :title, @validation_rule.name %>

<div class="container mx-auto px-4 py-6">
  <%# Breadcrumb navigation %>
  <div class="mb-6">
    <%= link_to polymorphic_path([@validatable, :validation_rules]), class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" do %>
      &larr; Back to <%= @validatable.name.titleize %> Validation Rules
    <% end %>
  </div>

  <%# Header section with title and buttons %>
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6 flex flex-col sm:flex-row justify-between items-start sm:items-center">
      <div>
        <h1 class="text-xl leading-6 font-medium text-gray-900 dark:text-white">
          <%= @validation_rule.name %>
          
          <%# Status badges %>
          <% case @validation_rule.severity %>
          <% when 'info' %>
            <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">Info</span>
          <% when 'warning' %>
            <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300">Warning</span>
          <% else %>
            <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300">Error</span>
          <% end %>
          
          <% if @validation_rule.active? %>
            <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">Active</span>
          <% else %>
            <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">Inactive</span>
          <% end %>
          
          <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300">
            <%= @validation_rule.rule_type.humanize %>
          </span>
        </h1>
        <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
          <%= @validation_rule.description.present? ? @validation_rule.description : "Validation rule for #{@validatable.name.titleize}" %>
        </p>
      </div>
      
      <%# Desktop and tablet action buttons %>
      <div class="mt-4 sm:mt-0 flex flex-wrap gap-2">
        <%= link_to edit_polymorphic_path([@validatable, @validation_rule]), class: "btn btn-secondary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
          </svg>
          Edit
        <% end %>
        
        <%= link_to case
                  when @vertical
                    toggle_active_vertical_validation_rule_path(@vertical, @validation_rule)
                  when @campaign
                    toggle_active_campaign_validation_rule_path(@campaign, @validation_rule)
                  end,
                  data: { turbo_method: :patch },
                  class: "btn #{@validation_rule.active? ? 'btn-warning' : 'btn-success'}" do %>
          <% if @validation_rule.active? %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
            </svg>
            Disable
          <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Enable
          <% end %>
        <% end %>
        
        <%= button_to polymorphic_path([@validatable, @validation_rule]), 
                    method: :delete, 
                    form: { data: { turbo_confirm: "Are you sure you want to delete this validation rule?" } }, 
                    class: "btn btn-danger" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
          Delete
        <% end %>
      </div>
    </div>
    
    <%# Rule details section %>
    <div class="border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800">
      <dl>
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-200 sm:mt-0 sm:col-span-2"><%= @validation_rule.name %></dd>
        </div>
        
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Type</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-200 sm:mt-0 sm:col-span-2"><%= @validation_rule.rule_type.humanize %></dd>
        </div>
        
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Severity</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-200 sm:mt-0 sm:col-span-2">
            <% case @validation_rule.severity %>
            <% when 'info' %>
              <span class="inline-flex items-center rounded-full bg-blue-100 dark:bg-blue-900 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:text-blue-300">
                Info Level
              </span>
            <% when 'warning' %>
              <span class="inline-flex items-center rounded-full bg-yellow-100 dark:bg-yellow-900 px-2.5 py-0.5 text-xs font-medium text-yellow-800 dark:text-yellow-300">
                Warning Level
              </span>
            <% else %>
              <span class="inline-flex items-center rounded-full bg-red-100 dark:bg-red-900 px-2.5 py-0.5 text-xs font-medium text-red-800 dark:text-red-300">
                Error Level
              </span>
            <% end %>
          </dd>
        </div>
        
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6 bg-white dark:bg-gray-800">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-gray-200 sm:mt-0 sm:col-span-2">
            <% if @validation_rule.active? %>
              <span class="inline-flex items-center rounded-full bg-green-100 dark:bg-green-900 px-2.5 py-0.5 text-xs font-medium text-green-800 dark:text-green-300">
                Active
              </span>
            <% else %>
              <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-gray-700 px-2.5 py-0.5 text-xs font-medium text-gray-800 dark:text-gray-300">
                Inactive
              </span>
            <% end %>
          </dd>
        </div>
        
        <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-300">Error Message</dt>
          <dd class="mt-1 text-sm text-red-600 dark:text-red-400 sm:mt-0 sm:col-span-2">
            <%= @validation_rule.error_message %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
  
  <%# Rule Configuration Card %>
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white">Rule Configuration</h2>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Technical details of how this rule validates data
      </p>
    </div>
    
    <div class="border-t border-gray-200 dark:border-gray-700">
      <div class="p-4 sm:p-6 space-y-6">
        <%# Condition %>
        <div>
          <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Condition</h4>
          <div class="font-mono text-sm bg-gray-50 dark:bg-gray-900 p-3 rounded-md overflow-x-auto border border-gray-200 dark:border-gray-700">
            <%= @validation_rule.condition %>
          </div>
        </div>
        
        <%# Parameters %>
        <% if @validation_rule.parameters.present? && !@validation_rule.parameters.empty? %>
          <div>
            <h4 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Parameters</h4>
            <div class="font-mono text-sm bg-gray-50 dark:bg-gray-900 p-3 rounded-md overflow-x-auto border border-gray-200 dark:border-gray-700">
              <pre class="whitespace-pre-wrap"><%= JSON.pretty_generate(@validation_rule.parameters) %></pre>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%# Test Rule Card %>
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg mb-6" data-controller="validation-rule-test">
    <div class="px-4 py-5 sm:px-6">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white">Test This Rule</h2>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Try sample data to see how this rule validates
      </p>
    </div>
    
    <div class="border-t border-gray-200 dark:border-gray-700 p-4 sm:p-6">
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Test Data (JSON)</label>
        <textarea 
          data-validation-rule-test-target="testData" 
          rows="3" 
          class="block w-full rounded-md border-0 py-1.5 px-3 text-gray-900 dark:text-white dark:bg-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-700 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" 
          placeholder='{"<%= @validatable.name.underscore %>": "test value", "other_field": 123}'></textarea>
      </div>
      
      <button 
        type="button" 
        data-action="validation-rule-test#testRule"
        data-rule-id="<%= @validation_rule.id %>"
        data-rule-type="<%= @validation_rule.rule_type %>"
        data-rule-condition="<%= @validation_rule.condition %>"
        data-rule-parameters="<%= @validation_rule.parameters.to_json %>"
        class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
        </svg>
        Run Test
      </button>
      
      <div data-validation-rule-test-target="results" class="mt-4 hidden">
        <div data-validation-rule-test-target="valid" class="hidden">
          <div class="bg-green-50 dark:bg-green-900 p-3 rounded-md">
            <p class="text-sm text-green-700 dark:text-green-200 flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 mr-2 flex-shrink-0 text-green-500 dark:text-green-400">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
              <span>
                <span class="font-bold">Validation passed!</span>
                <span class="block mt-1">This data meets the rule requirements.</span>
              </span>
            </p>
          </div>
        </div>
        
        <div data-validation-rule-test-target="invalid" class="hidden">
          <div class="bg-red-50 dark:bg-red-900 p-3 rounded-md">
            <p class="text-sm text-red-700 dark:text-red-200 flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 mr-2 flex-shrink-0 text-red-500 dark:text-red-400">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
              </svg>
              <span>
                <span class="font-bold">Validation failed:</span>
                <span data-validation-rule-test-target="errorMessage" class="block mt-1"></span>
              </span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%# Documentation Link - Footer %>
  <div class="text-center">
    <%= link_to validation_rules_documentation_path, class: "inline-flex items-center text-sm text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
      </svg>
      View validation rule documentation and examples
    <% end %>
  </div>
  
  <%= turbo_frame_tag "modal" %>
</div>