<% content_for :title, "Validation Rules" %>

<div class="container mx-auto px-4 py-6">
  <%# Breadcrumb navigation - visible on all screen sizes %>
  <div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3 list-none">
        <li class="inline-flex items-center">
          <%= link_to root_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-500" do %>
            <svg class="w-3 h-3 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
            </svg>
            Home
          <% end %>
        </li>
        
        <% if @vertical %>
          <li>
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <%= link_to "Verticals", verticals_path, class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-blue-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <%= link_to @vertical.name, vertical_path(@vertical), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-blue-500" %>
            </div>
          </li>
        <% elsif @campaign %>
          <li>
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <%= link_to "Campaigns", campaigns_path, class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-blue-500" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
              </svg>
              <%= link_to @campaign.name, campaign_path(@campaign), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-blue-500" %>
            </div>
          </li>
        <% end %>
          
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Validation Rules</span>
          </div>
        </li>
      </ol>
    </nav>
  </div>

  <%# Main content section with header %>
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6 flex flex-col sm:flex-row justify-between items-start sm:items-center">
      <div>
        <h1 class="text-xl font-medium text-gray-900 dark:text-white">
          <% if @vertical %>
            Validation Rules for <%= @vertical.name %>
          <% elsif @campaign %>
            Validation Rules for <%= @campaign.name %> 
          <% else %>
            Validation Rules for <%= @validatable.name.titleize %>
          <% end %>
        </h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          Define and manage validation rules to ensure data quality
          <%= link_to validation_rules_documentation_path, target: "_blank", class: "ml-1 text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" do %>
            <span class="inline-flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
              </svg>
              View Documentation
            </span>
          <% end %>
        </p>
      </div>
      
      <div class="mt-4 sm:mt-0">
        <%= link_to "Add Rule", 
                    case
                    when @vertical
                      new_vertical_validation_rule_path(@vertical)
                    when @campaign 
                      new_campaign_validation_rule_path(@campaign)
                    end,
                    class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  
  <% if @validation_rules.any? %>
    <%# Information card about rule ordering %>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6 p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600 dark:text-blue-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">About Validation Rules</h3>
          <div class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            <p>Rules are evaluated in the order shown here, from top to bottom. <span class="hidden sm:inline">Drag and drop to reorder validation rules.</span></p>
          </div>
        </div>
      </div>
    </div>
  
    <%= render 'validation_rules/validation_rules_table', validation_rules: @validation_rules %>
    
    <%# Mobile Drag & Drop Instructions %>
    <div class="sm:hidden bg-blue-50 dark:bg-blue-900/20 p-3 rounded-lg border border-blue-100 dark:border-blue-900 mt-4">
      <p class="text-sm text-blue-700 dark:text-blue-300 flex items-start">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        <span>Drag rules to reorder. Rules are evaluated from top to bottom.</span>
      </p>
    </div>
  <% else %>
    <%# Empty State %>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg px-4 py-10 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-200">No validation rules</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new validation rule.</p>
      <div class="mt-6">
        <%= link_to "Add Rule", 
          case
          when @vertical
            new_vertical_validation_rule_path(@vertical)
          when @campaign 
            new_campaign_validation_rule_path(@campaign)
          end,
          class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  
  <%= turbo_frame_tag "modal" %>
</div>