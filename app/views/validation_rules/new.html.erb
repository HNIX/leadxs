<% content_for :title, "New Validation Rule" %>

<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-8">
  <div class="md:flex md:items-center md:justify-between mb-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:truncate sm:text-3xl sm:tracking-tight">
        New Validation Rule for <%= @validatable.name.titleize %>
      </h2>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        Create a validation rule to ensure data quality and consistency
      </p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
     
      <%= link_to case
                  when @vertical && !@validatable.is_a?(VerticalField)
                    vertical_validation_rules_path(@vertical)
                  when @campaign && !@validatable.is_a?(CampaignField)
                    campaign_validation_rules_path(@campaign)
                  end,
                  class: "inline-flex items-center rounded-md bg-white dark:bg-gray-800 px-3 py-2 text-sm font-semibold text-gray-900 dark:text-gray-200 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700" do %>
    
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
        </svg>
        Back to Rules
      <% end %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-900 shadow sm:rounded-lg" data-controller="validation-rule">
    <div class="px-4 py-5 sm:p-6">
      <%= render "form", validation_rule: @validation_rule %>
    </div>
  </div>
</div>