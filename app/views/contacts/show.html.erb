<div class="container mx-auto px-4 py-8">
  <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium dark:text-white text-gray-900">Contact Information</h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-white">Details for <%= @contact.full_name %>.</p>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-white">Full name</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2"><%= @contact.full_name %></dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-white">Email address</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2"><%= @contact.email %></dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-white">Phone number</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:mt-0 sm:col-span-2"><%= @contact.phone %></dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-white">Company</dt>
          <dd class="mt-1 text-sm text-gray-900  dark:text-white sm:mt-0 sm:col-span-2"><%= @company.name %></dd>
        </div>
      </dl>
    </div>
  </div>

  <div class="mt-6 flex space-x-3">
    <%= link_to "Back to Contacts", company_contacts_path(@company), class: "btn btn-white" %>
    <%= link_to "Edit Contact", edit_company_contact_path(@company, @contact), class: "btn btn-secondary" %>
    <%= button_to "Delete Contact", company_contact_path(@company, @contact), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this contact?" } }, class: "btn btn-danger" %>
  </div>
</div>
