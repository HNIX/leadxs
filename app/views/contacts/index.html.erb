<div class="container mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Contacts for <%= @company.name %></h1>
    <%= link_to "New Contact", new_company_contact_path(@company), class: "btn btn-primary" %>
  </div>

  <% if @contacts.any? %>
    <div class="bg-white dark:bg-gray-900 shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50 dark:bg-gray-900">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-white uppercase tracking-wider">Name</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-white uppercase tracking-wider">Email</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-white uppercase tracking-wider">Phone</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-white uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200">
          <% @contacts.each do |contact| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900 dark:text-white"><%= contact.full_name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white"><%= contact.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white"><%= contact.phone %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", company_contact_path(@company, contact), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                <%= link_to "Edit", edit_company_contact_path(@company, contact), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                <%= button_to "Delete", company_contact_path(@company, contact), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 inline cursor-pointer" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg p-6 text-center">
      <p class="text-gray-500">No contacts found for this company.</p>
      <p class="mt-2">
        <%= link_to "Add your first contact", new_company_contact_path(@company), class: "text-blue-600 hover:text-blue-900" %>
      </p>
    </div>
  <% end %>

  <div class="mt-4">
    <%= link_to "Back to Company", company_path(@company), class: "text-blue-600 hover:text-blue-900" %>
  </div>
</div>
