<% # This is a Turbo response file for handling field position updates %>
<turbo-stream action="replace" target="standard_fields_list">
  <template>
    <%= render partial: "standard_fields/list", locals: { standard_fields: @standard_fields } %>
  </template>
</turbo-stream>

<turbo-stream action="append" target="flash">
  <template>
    <div class="flash flash-success">
      <div class="container mx-auto px-4">
        <div class="py-2 flex items-center justify-between">
          <div class="flex items-center">
            <svg class="h-5 w-5 mr-2 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p>Field positions updated successfully.</p>
          </div>
          <button data-action="click->notifications#remove" class="text-gray-400 hover:text-gray-500">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </template>
</turbo-stream>
