<div class="nested-fields flex items-center gap-4">
  <div class="flex-grow">
    <%= f.text_field :list_value, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 dark:border-gray-700 rounded-md", placeholder: "Enter value" %>
  </div>
  <div class="flex-shrink-0">
    <%= f.hidden_field :position, class: 'position-field' %>
    <%= link_to_remove_association f, class: "text-red-600 hover:text-red-900" do %>
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>