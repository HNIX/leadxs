<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "&larr; Back to Standard Fields".html_safe, standard_fields_path, class: "text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300" %>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">
        Create Standard Field
      </h3>
      <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">
        Add a new field that will be automatically added to all new verticals.
      </p>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <%= render 'form', standard_field: @standard_field %>
    </div>
  </div>
</div>
