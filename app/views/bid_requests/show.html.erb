<div class="container px-4 mx-auto my-8">
  <div class="mb-4">
    <%= link_to "← Back to Bid Requests", bid_requests_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">Bid Request: <%= @bid_request.unique_id %></h1>
    
    <div class="flex space-x-2">
      <% if !@bid_request.expired? && @bid_request.status != "completed" %>
        <%= button_to "Solicit Bids", solicit_bids_bid_request_path(@bid_request), class: "btn btn-outline" %>
        <% if @bid_request.bids.any? %>
          <%= button_to "Complete Bidding", complete_bidding_bid_request_path(@bid_request), class: "btn btn-success" %>
        <% end %>
      <% end %>
      
      <% if @bid_request.status == "active" %>
        <%= button_to "Expire", expire_bid_request_path(@bid_request), class: "btn btn-danger", data: { confirm: "Are you sure? This will mark the bid request as expired." } %>
      <% end %>
      
      <%= link_to "Edit", edit_bid_request_path(@bid_request), class: "btn btn-secondary" %>
      <%= button_to "Delete", @bid_request, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this bid request?" } %>
    </div>
  </div>

  <div class="bg-white rounded shadow p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <h2 class="font-medium text-gray-700">Status</h2>
        <span class="<%= bid_request_status_class(@bid_request) %>">
          <%= @bid_request.status.titleize %>
        </span>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Campaign</h2>
        <p><%= link_to @bid_request.campaign.name, @bid_request.campaign, class: "text-blue-600 hover:text-blue-800" %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Created</h2>
        <p><%= l @bid_request.created_at, format: :long %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Expires</h2>
        <p>
          <%= l @bid_request.expires_at, format: :long %>
          <% if @bid_request.expired? %>
            <span class="text-red-600 font-medium">(Expired)</span>
          <% else %>
            <span class="text-gray-500">(<%= time_ago_in_words(@bid_request.expires_at) %> from now)</span>
          <% end %>
        </p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Bid Count</h2>
        <p><%= @bids.count %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Has Lead</h2>
        <p><%= @bid_request.lead.present? ? "Yes" : "No" %></p>
      </div>
    </div>
    
    <div class="mt-6">
      <h2 class="font-medium text-gray-700 mb-2">Anonymized Data</h2>
      <div class="bg-gray-50 p-4 rounded overflow-auto max-h-64">
        <pre class="text-sm"><%= JSON.pretty_generate(@bid_request.anonymized_data || {}) %></pre>
      </div>
    </div>
  </div>

  <h2 class="h4 mb-4">Bids</h2>
  <div class="bg-white rounded shadow">
    <% if @bids.any? %>
      <table class="table-auto w-full">
        <thead>
          <tr>
            <th class="p-3 text-left">ID</th>
            <th class="p-3 text-left">Distribution</th>
            <th class="p-3 text-left">Amount</th>
            <th class="p-3 text-left">Status</th>
            <th class="p-3 text-left">Created</th>
            <th class="p-3 text-left">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @bids.each do |bid| %>
            <tr class="border-t border-gray-200 <%= bid.winning_bid? ? 'bg-green-50' : '' %>">
              <td class="p-3"><%= bid.id %></td>
              <td class="p-3"><%= bid.distribution.name %></td>
              <td class="p-3 font-medium"><%= number_to_currency(bid.amount) %></td>
              <td class="p-3">
                <span class="<%= bid_status_class(bid) %>">
                  <%= bid.status.titleize %>
                  <%= "(Winner)" if bid.winning_bid? %>
                </span>
              </td>
              <td class="p-3"><%= time_ago_in_words(bid.created_at) %> ago</td>
              <td class="p-3">
                <%= link_to "View", bid_request_bid_path(@bid_request, bid), class: "btn btn-sm btn-link" %>
                
                <% if !@bid_request.expired? && @bid_request.status != "completed" && bid.status == "pending" %>
                  <%= button_to "Accept", accept_bid_request_bid_path(@bid_request, bid), class: "btn btn-sm btn-success" %>
                  <%= button_to "Reject", reject_bid_request_bid_path(@bid_request, bid), class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-6 text-center">
        <p class="text-gray-500">No bids received yet.</p>
        <% if !@bid_request.expired? && @bid_request.status == "active" %>
          <%= button_to "Solicit Bids", solicit_bids_bid_request_path(@bid_request), class: "btn btn-primary mt-4" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>