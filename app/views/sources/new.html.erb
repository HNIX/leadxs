<% source_new_breadcrumbs(@campaign) %>

<div class="container mx-auto px-4 py-6">
  <div class="flex items-center mb-6">
    <h1 class="text-2xl font-bold dark:text-white">
      <% if @campaign.present? %>
        <%= link_to @campaign.name, campaign_path(@campaign), class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
        <span class="text-gray-500 dark:text-gray-400">/</span>
        <%= link_to "Sources", campaign_sources_path(@campaign), class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
        <span class="text-gray-500 dark:text-gray-400">/</span>
      <% else %>
        <%= link_to "Sources", sources_path, class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
        <span class="text-gray-500 dark:text-gray-400">/</span>
      <% end %>
      New Source
    </h1>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <% if !@campaign.present? %>
      <div class="mb-4 p-4 bg-blue-50 dark:bg-blue-900/30 border-l-4 border-blue-500 dark:border-blue-700">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-blue-700 dark:text-blue-300">You are creating a new source globally. Make sure to select a campaign for this source.</p>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= render 'form' %>
  </div>
</div>