<% source_edit_breadcrumbs(@source, from_campaign: params[:from_campaign].present?) %>

<div class="container mx-auto px-4 py-6">
  <div class="flex items-center mb-6">
    <h1 class="text-2xl font-bold dark:text-white">
      <% if params[:from_campaign].present? %>
        <%= link_to @source.campaign.name, campaign_path(@source.campaign), class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
        <span class="text-gray-500 dark:text-gray-400">/</span>
        <%= link_to "Sources", campaign_sources_path(@source.campaign), class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
        <span class="text-gray-500 dark:text-gray-400">/</span>
      <% else %>
        <%= link_to "Sources", sources_path, class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
        <span class="text-gray-500 dark:text-gray-400">/</span>
      <% end %>
      <%= link_to @source.name, source_path(@source, from_campaign: params[:from_campaign]), class: "text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" %>
      <span class="text-gray-500 dark:text-gray-400">/</span>
      Edit
    </h1>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <%= render 'form' %>
  </div>
</div>