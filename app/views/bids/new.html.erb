<div class="container px-4 mx-auto my-8">
  <div class="mb-4">
    <%= link_to "← Back to Bid Request", @bid_request, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
  </div>

  <div class="mb-6">
    <h1 class="h3 dark:text-white">New Bid</h1>
    <p class="text-gray-600 dark:text-gray-400">For bid request: <%= @bid_request.unique_id %></p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded shadow p-6">
    <%= render "form", bid: @bid %>
  </div>
</div>