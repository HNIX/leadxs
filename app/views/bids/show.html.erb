<div class="container px-4 mx-auto my-8">
  <div class="mb-4">
    <%= link_to "â† Back to Bid Request", @bid_request, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">Bid <%= @bid.id %></h1>
    
    <div class="flex space-x-2">
      <% if !@bid_request.expired? && @bid_request.status != "completed" && @bid.status == "pending" %>
        <%= button_to "Accept", accept_bid_request_bid_path(@bid_request, @bid), class: "btn btn-success" %>
        <%= button_to "Reject", reject_bid_request_bid_path(@bid_request, @bid), class: "btn btn-danger" %>
      <% end %>
      
      <%= link_to "Edit", edit_bid_request_bid_path(@bid_request, @bid), class: "btn btn-secondary" %>
      <%= button_to "Delete", [@bid_request, @bid], method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this bid?" } %>
    </div>
  </div>

  <div class="bg-white rounded shadow p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <h2 class="font-medium text-gray-700">Status</h2>
        <span class="<%= bid_status_class(@bid) %>">
          <%= @bid.status.titleize %>
          <%= "(Winner)" if @bid.winning_bid? %>
        </span>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Distribution</h2>
        <p><%= @bid.distribution.name %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Amount</h2>
        <p class="font-medium"><%= number_to_currency(@bid.amount) %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Bid Request</h2>
        <p><%= link_to @bid_request.unique_id, @bid_request, class: "text-blue-600 hover:text-blue-800" %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Campaign</h2>
        <p><%= link_to @bid_request.campaign.name, @bid_request.campaign, class: "text-blue-600 hover:text-blue-800" %></p>
      </div>
      
      <div>
        <h2 class="font-medium text-gray-700">Created</h2>
        <p><%= l @bid.created_at, format: :long %></p>
      </div>
    </div>
    
    <% if @bid.api_request.present? %>
      <div class="mt-6">
        <h2 class="font-medium text-gray-700 mb-2">API Request</h2>
        <div class="bg-gray-50 p-4 rounded">
          <p>
            <%= link_to "View API Request Details", @bid.api_request, class: "text-blue-600 hover:text-blue-800" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>