<div class="p-4">
  <div class="flex justify-between items-center">
    <div>
      <p class="font-medium text-gray-800 dark:text-white"><%= campaign_distribution.distribution&.name %></p>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        Campaign: <%= campaign_distribution.campaign&.name %>
      </p>
    </div>
    <div class="text-right">
      <p class="text-sm font-medium text-gray-600 dark:text-gray-300">
        <%= campaign_distribution.priority || "N/A" %>
        <span class="text-xs text-gray-500 dark:text-gray-400">priority</span>
      </p>
    </div>
  </div>
  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
    <% if campaign_distribution.last_used_at %>
      Last used <%= time_ago_in_words(campaign_distribution.last_used_at) %> ago
    <% else %>
      Never used
    <% end %>
  </p>
</div>