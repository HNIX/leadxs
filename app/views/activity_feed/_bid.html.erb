<div class="p-4">
  <div class="flex justify-between items-center">
    <div>
      <p class="font-medium text-gray-800 dark:text-white">$<%= sprintf('%.2f', bid.amount) %></p>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        <%= bid.distribution&.name %>
      </p>
    </div>
    <div>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= bid_status_color(bid.status) %>">
        <%= bid.status.humanize %>
      </span>
    </div>
  </div>
  <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
    <%= time_ago_in_words(bid.created_at) %> ago
    <% if bid.winning_bid? %>
      <span class="ml-1 text-yellow-500 font-medium">WINNER</span>
    <% end %>
  </p>
</div>