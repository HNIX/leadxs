<% content_for :title, "Compliance Dashboard" %>

<div class="container mx-auto px-4 py-6">
  <div class="border-b border-gray-200 dark:border-gray-700 pb-5 mb-6 flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold leading-7 text-gray-900 dark:text-gray-100">Compliance Dashboard</h1>
      <%= link_to compliance_documentation_path, class: "mt-1 text-sm text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300" do %>
        <span class="flex items-center">
          <svg class="h-4 w-4 mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z" clip-rule="evenodd" />
          </svg>
          View Compliance Documentation
        </span>
      <% end %>
    </div>
    <div class="flex">
      <%= link_to compliance_report_path, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 dark:bg-indigo-700 hover:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-offset-gray-800" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4V5h12v10z"/>
          <path d="M7 7h6v2H7V7zm0 4h6v2H7v-2z"/>
        </svg>
        Generate Report
      <% end %>
      
      <%= link_to compliance_regulatory_report_path, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 dark:bg-green-700 hover:bg-green-700 dark:hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 dark:focus:ring-offset-gray-800" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
        Regulatory Report
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Compliance Overview -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="bg-indigo-100 dark:bg-indigo-900/50 rounded-md p-3">
          <svg class="h-6 w-6 text-indigo-600 dark:text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Compliance Events</h2>
          <p class="mt-1 text-2xl font-semibold text-gray-700 dark:text-gray-300"><%= @report_data[:total_compliance_events] || 0 %></p>
        </div>
      </div>
    </div>

    <!-- Consent Records -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="bg-green-100 dark:bg-green-900/50 rounded-md p-3">
          <svg class="h-6 w-6 text-green-600 dark:text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Consents Given</h2>
          <p class="mt-1 text-2xl font-semibold text-gray-700 dark:text-gray-300"><%= @report_data.dig(:consent_statistics, :consents_given) || 0 %></p>
        </div>
      </div>
    </div>

    <!-- Distribution Records -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="bg-blue-100 dark:bg-blue-900/50 rounded-md p-3">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/>
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Distributions</h2>
          <p class="mt-1 text-2xl font-semibold text-gray-700 dark:text-gray-300"><%= @report_data.dig(:distribution_statistics, :distributions_attempted) || 0 %></p>
        </div>
      </div>
    </div>

    <!-- Data Access Records -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <div class="flex items-center">
        <div class="bg-yellow-100 dark:bg-yellow-900/50 rounded-md p-3">
          <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Data Access Events</h2>
          <p class="mt-1 text-2xl font-semibold text-gray-700 dark:text-gray-300"><%= @report_data.dig(:data_access_report, :total_access_events) || 0 %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Compliance Events -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100">Recent Compliance Events</h3>
      </div>
      <div class="bg-gray-50 dark:bg-gray-700">
        <ul class="divide-y divide-gray-200 dark:divide-gray-600 list-none">
          <% if @recent_events.present? %>
            <% @recent_events.each do |event| %>
              <li class="px-6 py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <% case event.event_type %>
                    <% when 'lead_processing' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-300">Lead</span>
                    <% when 'consent' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-300">Consent</span>
                    <% when 'distribution' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-300">Distribution</span>
                    <% when 'validation' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900/50 text-yellow-800 dark:text-yellow-300">Validation</span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300"><%= event.event_type.titleize %></span>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate">
                      <%= event.action.humanize %> <%= event.record_type %>
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400 truncate">
                      <%= time_ago_in_words(event.occurred_at) %> ago
                    </p>
                  </div>
                  <div>
                    <%= link_to compliance_show_path(record_type: event.record_type.underscore, record_id: event.record_id), class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300 text-sm font-medium" do %>
                      View details
                    <% end %>
                  </div>
                </div>
              </li>
            <% end %>
          <% else %>
            <li class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
              No compliance events found
            </li>
          <% end %>
        </ul>
        <div class="bg-white dark:bg-gray-800 px-6 py-4 border-t border-gray-200 dark:border-gray-700">
          <%= link_to compliance_path, class: "text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300" do %>
            View all compliance events
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Consent Records -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100">Recent Consent Records</h3>
      </div>
      <div class="bg-gray-50 dark:bg-gray-700">
        <ul class="divide-y divide-gray-200 dark:divide-gray-600 list-none">
          <% if @recent_consents.present? %>
            <% @recent_consents.each do |consent| %>
              <li class="px-6 py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <% if consent.active? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-300">Active</span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900/50 text-red-800 dark:text-red-300">Inactive</span>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate">
                      <%= consent.consent_type.humanize %> for Lead #<%= consent.lead_id %>
                    </p>
                    <p class="text-sm text-gray-500 dark:text-gray-400 truncate">
                      Given <%= time_ago_in_words(consent.consented_at) %> ago
                      <% if consent.expires_at.present? %>
                        â€¢ Expires <%= time_ago_in_words(consent.expires_at) %> from now
                      <% end %>
                    </p>
                  </div>
                  <div>
                    <%= link_to compliance_show_path(record_type: 'consent_record', record_id: consent.id), class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300 text-sm font-medium" do %>
                      View details
                    <% end %>
                  </div>
                </div>
              </li>
            <% end %>
          <% else %>
            <li class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
              No consent records found
            </li>
          <% end %>
        </ul>
        <div class="bg-white dark:bg-gray-800 px-6 py-4 border-t border-gray-200 dark:border-gray-700">
          <%= link_to compliance_path(filter_by: 'consent'), class: "text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300" do %>
            View all consent records
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>