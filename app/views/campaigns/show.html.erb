            <p class="text-xs text-orange-600 dark:text-orange-300">
              <%= @campaign.campaign_type == 'ping_post' ? 'Two-stage integration guide' : (@campaign.campaign_type == 'calls' ? 'Call routing API' : 'Direct post integration') %>
