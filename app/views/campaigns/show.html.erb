            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
              <% @recent_leads.each do |lead| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                  <td class="px-4 py-3 whitespace-nowrap">
                    <%= link_to lead.unique_id || lead.id, lead_path(lead), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300 font-medium" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-gray-900 dark:text-gray-200">
                    <%= lead.created_at.strftime("%b %d, %Y %H:%M") %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-gray-900 dark:text-gray-200">
                    <%= lead.source&.name || "N/A" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= lead.status == 'success' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 
                         lead.status == 'pending' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' : 
                         'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200' %>">
                      <%= lead.status&.titleize || "Unknown" %>
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-right text-sm font-medium">
                    <%= link_to "View", lead_path(lead), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="mt-3 text-center">
          <%= link_to "View All Leads", leads_path(campaign_id: @campaign.id), class: "text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 text-sm font-medium" %>
        </div>
      <% else %>
        <div class="p-6 text-center">
          <div class="mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-md font-medium text-gray-700 dark:text-gray-200 mb-1">No leads yet</h3>
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Leads will appear here once they start coming in from your sources.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Filter Cards -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Source Filters Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
      <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
        <div class="flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white">Source Filters</h3>
          <%= link_to "View All", campaign_source_filters_path(@campaign), class: "text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 text-sm font-medium" %>
        </div>
      </div>
      <div class="p-6">
        <% if @source_filters.any? %>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @source_filters.each do |filter| %>
              <li class="py-3 flex justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= filter.campaign_field.label || filter.campaign_field.name %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <% if filter.operator == Filter::OPERATORS[:between] %>
                      Must be between <%= filter.min_value %> and <%= filter.max_value %>
                    <% else %>
                      Must be <%= filter.operator.humanize.downcase %> <%= filter.value.truncate(30) %>
                    <% end %>
                  </p>
                </div>
                <span class="px-2 h-6 flex items-center text-xs font-semibold rounded-full 
                  <%= filter.status == 'active' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 
                     filter.status == 'paused' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' : 
                     'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                  <%= filter.status.titleize %>
                </span>
              </li>
            <% end %>
          </ul>
          <%= link_to "Add Source Filter", new_campaign_source_filter_path(@campaign), class: "btn btn-sm btn-primary mt-4 w-full" %>
        <% else %>
          <div class="text-center py-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 dark:text-gray-500 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            <p class="text-gray-500 dark:text-gray-400 mb-4">No source filters have been created yet.</p>
            <%= link_to "Create Source Filter", new_campaign_source_filter_path(@campaign), class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Distribution Filters Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
      <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
        <div class="flex justify-between items-center">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white">Distribution Filters</h3>
          <%= link_to "View All", campaign_distribution_filters_path(@campaign), class: "text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 text-sm font-medium" %>
        </div>
      </div>
      <div class="p-6">
        <% if @distribution_filters.any? %>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @distribution_filters.each do |filter| %>
              <li class="py-3 flex justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= filter.campaign_field.label || filter.campaign_field.name %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <% if filter.operator == Filter::OPERATORS[:between] %>
                      Must be between <%= filter.min_value %> and <%= filter.max_value %>
                    <% else %>
                      Must be <%= filter.operator.humanize.downcase %> <%= filter.value.truncate(30) %>
                    <% end %>
                  </p>
                </div>
                <span class="px-2 h-6 flex items-center text-xs font-semibold rounded-full 
                  <%= filter.status == 'active' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200' : 
                     filter.status == 'paused' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200' : 
                     'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300' %>">
                  <%= filter.status.titleize %>
                </span>
              </li>
            <% end %>
          </ul>
          <%= link_to "Add Distribution Filter", new_campaign_distribution_filter_path(@campaign), class: "btn btn-sm btn-primary mt-4 w-full" %>
        <% else %>
          <div class="text-center py-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 dark:text-gray-500 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            <p class="text-gray-500 dark:text-gray-400 mb-4">No distribution filters have been created yet.</p>
            <%= link_to "Create Distribution Filter", new_campaign_distribution_filter_path(@campaign), class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

