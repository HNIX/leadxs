<!-- JavaScript for tabs -->
<% content_for :javascript do %>
  <script>
    document.addEventListener("turbo:load", function() {
      // Make sure the tabs are correctly initialized
      const tabsController = document.querySelector('[data-controller="tabs"]');
      if (tabsController) {
        // Find the first tab and activate it if none are active
        const tabs = tabsController.querySelectorAll('[data-target="tabs.tab"]');
        const panels = tabsController.querySelectorAll('[data-target="tabs.panel"]');
        
        let activeTabFound = false;
        tabs.forEach(tab => {
          if (tab.classList.contains("border-indigo-500") && tab.classList.contains("text-indigo-600")) {
            activeTabFound = true;
          }
        });
        
        if (!activeTabFound && tabs.length > 0) {
          // Activate the first tab
          tabs[0].click();
        }
      }
    });
  </script>
<% end %>