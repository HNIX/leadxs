<div class="container mx-auto px-4 py-8">
  <!-- Campaign Header -->
  <div class="flex justify-between items-start mb-6">
    <div>
      <div class="flex items-center space-x-2">
        <%= link_to campaigns_path, class: "text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold dark:text-white"><%= @campaign.name %></h1>
      </div>
      <div class="mt-1 flex items-center">
        <% case @campaign.status %>
        <% when 'active' %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
            Active
          </span>
        <% when 'paused' %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200">
            Paused
          </span>
        <% when 'draft' %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
            Draft
          </span>
        <% when 'archived' %>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200">
            Archived
          </span>
        <% end %>
        <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">
          <%= @campaign.campaign_type.titleize %> Campaign | <%= @campaign.vertical.name %>
        </span>
      </div>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Edit Campaign", edit_campaign_path(@campaign), class: "btn btn-white" %>
      <%= button_to "Delete Campaign", campaign_path(@campaign), method: :delete, class: "btn btn-danger-light", form: { data: { turbo_confirm: "Are you sure you want to delete this campaign? This action cannot be undone." } } %>
    </div>
  </div>

  <!-- Campaign Dashboard -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-6">
    <!-- Campaign Stats Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Campaign Stats</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Leads</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @leads_count %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Fields</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @campaign_fields.count %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Sources</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @campaign.sources.count %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Distributions</p>
          <p class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @campaign.distributions.count %></p>
        </div>
      </div>
    </div>

    <!-- Campaign Details -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Campaign Details</h3>
      <div class="space-y-3">
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Vertical</p>
          <p class="text-gray-900 dark:text-white"><%= link_to @campaign.vertical.name, vertical_path(@campaign.vertical), class: "text-blue-600 dark:text-blue-400 hover:underline" %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Distribution Method</p>
          <p class="text-gray-900 dark:text-white"><%= @campaign.distribution_method.titleize %></p>
        </div>
        <% if @campaign.description.present? %>
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Description</p>
            <p class="text-gray-900 dark:text-white"><%= @campaign.description.truncate(100) %></p>
          </div>
        <% end %>
        <div>
          <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Created</p>
          <p class="text-gray-900 dark:text-white"><%= @campaign.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 lg:col-span-2">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Quick Actions</h3>
      <div class="grid grid-cols-2 gap-4">
        <%= link_to campaign_sources_path(@campaign), class: "flex items-center p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <div class="bg-indigo-100 dark:bg-indigo-900 p-2 rounded-full mr-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
            </svg>
          </div>
          <div>
            <span class="font-medium text-gray-900 dark:text-white">Sources</span>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage data sources</p>
          </div>
        <% end %>

        <%= link_to campaign_campaign_distributions_path(@campaign), class: "flex items-center p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <div class="bg-purple-100 dark:bg-purple-900 p-2 rounded-full mr-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          </div>
          <div>
            <span class="font-medium text-gray-900 dark:text-white">Distributions</span>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage buyers</p>
          </div>
        <% end %>

        <%= link_to campaign_source_filters_path(@campaign), class: "flex items-center p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <div class="bg-orange-100 dark:bg-orange-900 p-2 rounded-full mr-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-orange-600 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
          </div>
          <div>
            <span class="font-medium text-gray-900 dark:text-white">Source Filters</span>
            <p class="text-sm text-gray-500 dark:text-gray-400">Filter eligible sources</p>
          </div>
        <% end %>

        <%= link_to campaign_distribution_filters_path(@campaign), class: "flex items-center p-3 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <div class="bg-red-100 dark:bg-red-900 p-2 rounded-full mr-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
          </div>
          <div>
            <span class="font-medium text-gray-900 dark:text-white">Distribution Filters</span>
            <p class="text-sm text-gray-500 dark:text-gray-400">Filter eligible distributions</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Bid Analytics Dashboard -->
  <% if @bid_metrics && @bid_metrics.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
      <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Bid Performance Analytics</h3>
        <%= link_to campaign_bid_report_path(@campaign.id, period_type: @period_type), class: "text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 text-sm font-medium" do %>
          View Detailed Reports
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        <% end %>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Bids</p>
            <p class="text-2xl font-semibold text-blue-600 dark:text-blue-400"><%= number_with_delimiter(@bid_metrics[:total_bids]) %></p>
            <div class="flex justify-between items-center mt-2">
              <span class="text-xs text-gray-500 dark:text-gray-400">Accepted:</span>
              <span class="text-xs font-medium text-gray-900 dark:text-white">
                <%= number_with_delimiter(@bid_metrics[:accepted_bids]) %> (<%= @bid_metrics[:acceptance_rate] %>%)
              </span>
            </div>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Average Bid</p>
            <p class="text-2xl font-semibold text-green-600 dark:text-green-400"><%= number_to_currency(@bid_metrics[:avg_bid_amount]) %></p>
            <div class="flex justify-between items-center mt-2">
              <span class="text-xs text-gray-500 dark:text-gray-400">Period:</span>
              <span class="text-xs font-medium text-gray-900 dark:text-white">
                <%= @period_type.titleize %>
              </span>
            </div>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Revenue</p>
            <p class="text-2xl font-semibold text-indigo-600 dark:text-indigo-400"><%= number_to_currency(@bid_metrics[:total_revenue]) %></p>
            <div class="flex justify-between items-center mt-2">
              <span class="text-xs text-gray-500 dark:text-gray-400">Per Bid:</span>
              <span class="text-xs font-medium text-gray-900 dark:text-white">
                <%= number_to_currency(@bid_metrics[:total_revenue] / [@bid_metrics[:total_bids], 1].max) %>
              </span>
            </div>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Conversions</p>
            <p class="text-2xl font-semibold text-red-600 dark:text-red-400"><%= number_with_delimiter(@bid_metrics[:conversion_count]) %></p>
            <div class="flex justify-between items-center mt-2">
              <span class="text-xs text-gray-500 dark:text-gray-400">Conversion Rate:</span>
              <span class="text-xs font-medium text-gray-900 dark:text-white">
                <%= (@bid_metrics[:conversion_count].to_f / [@bid_metrics[:total_bids], 1].max * 100).round(2) %>%
              </span>
            </div>
          </div>
        </div>
        
        <% if @bid_analytics.any? %>
          <div class="mt-4">
            <h4 class="font-medium text-gray-900 dark:text-white mb-2">Recent Bid Analytics</h4>
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                  <tr>
                    <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Period</th>
                    <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Bids</th>
                    <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Accepted</th>
                    <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Avg Amount</th>
                    <th scope="col" class="px-4 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Revenue</th>
                    <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
                  </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                  <% @bid_analytics.each do |snapshot| %>
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                      <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                        <%= format_snapshot_period(snapshot) %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500 dark:text-gray-300">
                        <%= number_with_delimiter(snapshot.total_bids) %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500 dark:text-gray-300">
                        <%= number_with_delimiter(snapshot.accepted_bids) %>
                        <span class="text-xs text-gray-400">
                          (<%= snapshot.acceptance_rate.round(1) %>%)
                        </span>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500 dark:text-gray-300">
                        <%= number_to_currency(snapshot.avg_bid_amount) %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-sm text-right text-gray-500 dark:text-gray-300">
                        <%= number_to_currency(snapshot.total_revenue) %>
                      </td>
                      <td class="px-4 py-3 whitespace-nowrap text-center text-sm font-medium">
                        <%= link_to "View", bid_report_path(snapshot), class: "text-primary-600 dark:text-primary-400 hover:text-primary-900 dark:hover:text-primary-300" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class="mt-3 text-center">
              <%= link_to "View All Bid Reports", campaign_bid_report_path(@campaign.id, period_type: @period_type), class: "text-primary-600 dark:text-primary-400 hover:text-primary-800 dark:hover:text-primary-300 text-sm font-medium" %>
            </div>
          </div>
        <% else %>
          <div class="mt-4 bg-gray-50 dark:bg-gray-700 rounded-lg p-6 text-center">
            <p class="text-gray-500 dark:text-gray-400">No bid analytics data is available for the selected period.</p>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Data will appear as bidding activity occurs.</p>
          </div>
        <% end %>
        
        <div class="mt-4 flex justify-between items-center">
          <div class="space-x-2">
            <%= link_to campaign_path(@campaign, period_type: 'hourly'), class: "text-sm #{@period_type == 'hourly' ? 'font-medium text-primary-600 dark:text-primary-400' : 'text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'}" do %>
              Hourly
            <% end %>
            <%= link_to campaign_path(@campaign, period_type: 'daily'), class: "text-sm #{@period_type == 'daily' ? 'font-medium text-primary-600 dark:text-primary-400' : 'text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'}" do %>
              Daily
            <% end %>
            <%= link_to campaign_path(@campaign, period_type: 'weekly'), class: "text-sm #{@period_type == 'weekly' ? 'font-medium text-primary-600 dark:text-primary-400' : 'text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'}" do %>
              Weekly
            <% end %>
            <%= link_to campaign_path(@campaign, period_type: 'monthly'), class: "text-sm #{@period_type == 'monthly' ? 'font-medium text-primary-600 dark:text-primary-400' : 'text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'}" do %>
              Monthly
            <% end %>
          </div>
          <div>
            <%= link_to "See Full Bid Analytics", campaign_bid_report_path(@campaign.id), class: "btn btn-sm btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Main Content with Tabs -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6" data-controller="tabs" data-tabs-active-tab-class="-mb-px border-l border-t border-r rounded-t">
    <div class="border-b border-gray-200 dark:border-gray-700">
      <nav class="-mb-px flex" aria-label="Tabs">
        <button data-action="click->tabs#change:prevent" data-tabs-target="tab" data-tab="fields" class="w-1/6 py-4 px-1 text-center border-b-2 border-primary-500 font-medium text-sm text-primary-600 dark:text-primary-400" aria-current="page">
          Fields
        </button>
        <button data-action="click->tabs#change:prevent" data-tabs-target="tab" data-tab="validation" class="w-1/6 py-4 px-1 text-center border-b-2 border-transparent font-medium text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600">
          Validation
        </button>
        <button data-action="click->tabs#change:prevent" data-tabs-target="tab" data-tab="calculated" class="w-1/6 py-4 px-1 text-center border-b-2 border-transparent font-medium text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600">
          Calculated
        </button>
        <button data-action="click->tabs#change:prevent" data-tabs-target="tab" data-tab="sources" class="w-1/6 py-4 px-1 text-center border-b-2 border-transparent font-medium text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600">
          Sources
        </button>
        <button data-action="click->tabs#change:prevent" data-tabs-target="tab" data-tab="distributions" class="w-1/6 py-4 px-1 text-center border-b-2 border-transparent font-medium text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600">
          Distributions
        </button>
        <button data-action="click->tabs#change:prevent" data-tabs-target="tab" data-tab="leads" class="w-1/6 py-4 px-1 text-center border-b-2 border-transparent font-medium text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600">
          Leads
        </button>
      </nav>
    </div>

    <!-- Fields Tab -->
    <div data-tabs-target="panel" data-tab-id="fields" class="p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Campaign Fields</h2>
        <%= link_to "Add Field", new_campaign_campaign_field_path(@campaign), class: "btn btn-sm btn-primary", data: { turbo_frame: "modal" } %>
      </div>
      
      <div id="campaign_fields" class="divide-y divide-gray-200 dark:divide-gray-700" data-controller="sortable" data-sortable-resource-url-value="<%= campaign_campaign_fields_path(@campaign) %>">
        <% if @campaign_fields.any? %>
          <div class="text-xs text-gray-500 dark:text-gray-400 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
            </svg>
            Drag fields to reorder
          </div>
          <%= render partial: "campaign_fields/list", locals: { campaign_fields: @campaign_fields, campaign: @campaign } %>
        <% else %>
          <div class="p-6 text-center">
            <div class="mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <h3 class="text-md font-medium text-gray-700 dark:text-gray-200 mb-1">No fields configured</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Add fields to customize your campaign data requirements.</p>
            <%= link_to "Add First Field", new_campaign_campaign_field_path(@campaign), class: "btn btn-sm btn-primary", data: { turbo_frame: "modal" } %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Validation Rules Tab -->
    <div data-tabs-target="panel" data-tab-id="validation" class="hidden p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Validation Rules</h2>
        <%= link_to "Add Rule", new_campaign_validation_rule_path(@campaign), class: "btn btn-sm btn-primary" %>
      </div>
      
      <% if @validation_rules.any? %>
        <div class="text-xs text-gray-500 dark:text-gray-400 mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
          </svg>
          Rules are evaluated in order shown
        </div>
        <div class="overflow-hidden">
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @validation_rules.each do |rule| %>
              <li class="px-4 py-3 flex items-center justify-between hover:bg-gray-50 dark:hover:bg-gray-700">
