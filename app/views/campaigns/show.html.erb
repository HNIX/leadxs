<div class="container mx-auto px-4 py-6 md:py-8">
  <!-- Campaign Header with Progress Bar -->
  <div class="mb-6">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-2">
      <div class="flex items-center mb-3 sm:mb-0">
        <%= link_to campaigns_path, class: "mr-2 text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-xl sm:text-2xl font-bold dark:text-white truncate max-w-md"><%= @campaign.name %></h1>
        
        <% status_color = case @campaign.status 
           when 'active' then 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200'
           when 'paused' then 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200'
           when 'draft' then 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200'
           when 'archived' then 'bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200'
           end %>
           
        <span class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_color %>">
          <%= @campaign.status.titleize %>
        </span>
      </div>
      
      <div class="flex flex-wrap gap-2">
        <%= link_to configure_campaign_path(@campaign), class: "btn btn-white" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Configure
        <% end %>
        
        <div class="dropdown relative inline-block">
          <button class="btn btn-white inline-flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            <span>Actions</span>
            <svg class="fill-current h-4 w-4 ml-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
              <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
            </svg>
          </button>
          <div class="dropdown-menu absolute hidden text-gray-700 pt-1 z-10 right-0 w-56">
            <%= link_to new_campaign_source_path(@campaign), class: "bg-white dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-white block py-2 px-4 text-sm" do %>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <span>Add Source</span>
              </div>
            <% end %>
            
            <%= link_to new_campaign_campaign_distribution_path(@campaign), class: "bg-white dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-white block py-2 px-4 text-sm" do %>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                </svg>
                <span>Add Distribution</span>
              </div>
            <% end %>
            
            <%= link_to new_campaign_campaign_field_path(@campaign), class: "bg-white dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-white block py-2 px-4 text-sm", data: { turbo_frame: "modal" } do %>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span>Add Field</span>
              </div>
            <% end %>
            
            <div class="border-t border-gray-200 dark:border-gray-600 my-1"></div>
            
            <%= link_to edit_campaign_path(@campaign), class: "bg-white dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-white block py-2 px-4 text-sm" do %>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <span>Edit Campaign</span>
              </div>
            <% end %>
            
            <%= button_to campaign_path(@campaign), method: :delete, class: "w-full text-left bg-white dark:bg-gray-700 hover:bg-red-100 dark:hover:bg-red-800 text-red-600 dark:text-red-400 block py-2 px-4 text-sm", form: { data: { turbo_confirm: "Are you sure you want to delete this campaign? This action cannot be undone." } } do %>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                <span>Delete Campaign</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="flex flex-wrap gap-2 text-sm mb-4">
      <div class="flex items-center text-gray-500 dark:text-gray-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <span><%= @campaign.campaign_type.titleize %></span>
      </div>
      
      <div class="flex items-center text-gray-500 dark:text-gray-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <span>
          <%= link_to @campaign.vertical.name, vertical_path(@campaign.vertical), class: "hover:underline" %>
        </span>
      </div>
      
      <div class="flex items-center text-gray-500 dark:text-gray-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
        </svg>
        <span><%= @campaign.distribution_method.titleize %></span>
      </div>
      
      <div class="flex items-center text-gray-500 dark:text-gray-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span><%= @campaign.created_at.strftime("%b %d, %Y") %></span>
      </div>
    </div>
    
    
  </div>

  <!-- Performance Analytics & Quick Stats -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <!-- Campaign Stats & Metrics Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden lg:col-span-2">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex flex-col sm:flex-row sm:justify-between sm:items-center">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2 sm:mb-0">Performance Dashboard</h3>
        
        <div class="flex flex-wrap gap-2 text-xs">
          <%= link_to campaign_path(@campaign, period_type: 'hourly'), class: "px-3 py-1 rounded-full #{@period_type == 'hourly' ? 'bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 font-medium' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
            Last 24h
          <% end %>
          
          <%= link_to campaign_path(@campaign, period_type: 'daily'), class: "px-3 py-1 rounded-full #{@period_type == 'daily' ? 'bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 font-medium' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
            Daily
          <% end %>
          
          <%= link_to campaign_path(@campaign, period_type: 'weekly'), class: "px-3 py-1 rounded-full #{@period_type == 'weekly' ? 'bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 font-medium' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
            Weekly
          <% end %>
          
          <%= link_to campaign_path(@campaign, period_type: 'monthly'), class: "px-3 py-1 rounded-full #{@period_type == 'monthly' ? 'bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 font-medium' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
            Monthly
          <% end %>
        </div>
      </div>
      
      <div class="p-4 sm:p-6">
        <!-- Metrics Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 sm:gap-4">
          <div class="bg-indigo-50 dark:bg-indigo-900/30 rounded-lg p-3 sm:p-4 relative overflow-hidden border border-indigo-100 dark:border-indigo-800">
            <div class="absolute top-0 right-0 w-12 h-12 -mt-4 -mr-4 rounded-full bg-indigo-100 dark:bg-indigo-800/30 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500 dark:text-indigo-400 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-xs font-medium text-indigo-600 dark:text-indigo-400 mb-1">Total Leads</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= number_with_delimiter(@leads_count) %></p>
            <% if @bid_metrics && @bid_metrics[:conversion_count].present? && @leads_count > 0 %>
              <div class="text-xs text-indigo-600 dark:text-indigo-400">
                <%= number_to_percentage((@bid_metrics[:conversion_count].to_f / @leads_count * 100), precision: 1) %> conversion rate
              </div>
            <% end %>
          </div>
          
          <div class="bg-green-50 dark:bg-green-900/30 rounded-lg p-3 sm:p-4 relative overflow-hidden border border-green-100 dark:border-green-800">
            <div class="absolute top-0 right-0 w-12 h-12 -mt-4 -mr-4 rounded-full bg-green-100 dark:bg-green-800/30 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 dark:text-green-400 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-xs font-medium text-green-600 dark:text-green-400 mb-1">Sources</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= @campaign.sources.count %></p>
            <div class="text-xs text-green-600 dark:text-green-400">
              <%= @campaign.sources.where(status: 'active').count %> active
            </div>
          </div>
          
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded-lg p-3 sm:p-4 relative overflow-hidden border border-blue-100 dark:border-blue-800">
            <div class="absolute top-0 right-0 w-12 h-12 -mt-4 -mr-4 rounded-full bg-blue-100 dark:bg-blue-800/30 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500 dark:text-blue-400 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
              </svg>
            </div>
            <p class="text-xs font-medium text-blue-600 dark:text-blue-400 mb-1">Distributions</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= @campaign.distributions.count %></p>
            <div class="text-xs text-blue-600 dark:text-blue-400">
              <%= @campaign.distributions.where(status: 'active').count %> active
            </div>
          </div>
          
          <div class="bg-purple-50 dark:bg-purple-900/30 rounded-lg p-3 sm:p-4 relative overflow-hidden border border-purple-100 dark:border-purple-800">
            <div class="absolute top-0 right-0 w-12 h-12 -mt-4 -mr-4 rounded-full bg-purple-100 dark:bg-purple-800/30 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500 dark:text-purple-400 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
            <p class="text-xs font-medium text-purple-600 dark:text-purple-400 mb-1">Fields</p>
            <p class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white mb-2"><%= @campaign_fields.count %></p>
            <div class="text-xs text-purple-600 dark:text-purple-400">
              <%= @campaign_fields.select(&:required?).count %> required
            </div>
          </div>
        </div>
        
        <% if @bid_metrics && @bid_metrics.any? %>
          <!-- Bid Analytics -->
          <div class="mt-6">
            <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">Bid Performance</h4>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-3 sm:gap-4 mb-4">
              <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-3 flex items-center">
                <div class="rounded-full w-10 h-10 bg-yellow-100 dark:bg-yellow-900 flex items-center justify-center mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">Total Bids</div>
                  <div class="text-lg font-semibold text-gray-900 dark:text-white">
                    <%= number_with_delimiter(@bid_metrics[:total_bids]) %>
                    <span class="text-xs font-normal text-gray-500 dark:text-gray-400">
                      (<%= @bid_metrics[:acceptance_rate] %>% accepted)
                    </span>
                  </div>
                </div>
              </div>
              
              <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-3 flex items-center">
                <div class="rounded-full w-10 h-10 bg-green-100 dark:bg-green-900 flex items-center justify-center mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">Avg Bid Amount</div>
                  <div class="text-lg font-semibold text-gray-900 dark:text-white">
                    <%= number_to_currency(@bid_metrics[:avg_bid_amount]) %>
                  </div>
                </div>
              </div>
              
              <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-3 flex items-center">
                <div class="rounded-full w-10 h-10 bg-blue-100 dark:bg-blue-900 flex items-center justify-center mr-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">Total Revenue</div>
                  <div class="text-lg font-semibold text-gray-900 dark:text-white">
                    <%= number_to_currency(@bid_metrics[:total_revenue]) %>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="flex justify-center mt-3">
              <%= link_to campaign_bid_report_path(@campaign.id), class: "text-sm text-primary-600 dark:text-primary-400 font-medium hover:text-primary-800 dark:hover:text-primary-300 flex items-center" do %>
                View Detailed Analytics
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- No Analytics Yet -->
          <div class="mt-6 flex flex-col items-center justify-center p-6 bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-dashed border-gray-300 dark:border-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 dark:text-gray-600 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <h4 class="text-base font-medium text-gray-900 dark:text-white mb-1">No Analytics Data Yet</h4>
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center max-w-sm mb-4">
              Analytics data will appear here once the campaign starts receiving bids from your distributions.
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Campaign Details & Next Steps -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white">Campaign Information</h3>
      </div>
      
      <div class="p-6">
        <% if @campaign.description.present? %>
          <div class="mb-6">
