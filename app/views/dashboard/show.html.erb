<div class="container mx-auto p-4">
  <!-- Documentation Banner -->
  <div class="my-6 bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-800 dark:to-indigo-800 rounded-lg shadow-lg overflow-hidden">
    <div class="px-6 py-5">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="flex-shrink-0 bg-white dark:bg-gray-800 rounded-md p-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-xl font-bold text-white">Lead Submission & Bidding System</h2>
            <p class="text-blue-100">Manage bid requests, monitor performance, and view real-time analytics</p>
          </div>
        </div>
        <div class="flex space-x-2">
          <%= link_to dashboard_bid_requests_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-white hover:bg-indigo-50 dark:bg-gray-800 dark:text-blue-300 dark:hover:bg-gray-700 dark:border-gray-700" do %>
            Bid Requests
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          <% end %>
          <%= link_to real_time_bid_dashboard_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-white hover:bg-indigo-50 dark:bg-gray-800 dark:text-blue-300 dark:hover:bg-gray-700 dark:border-gray-700" do %>
            Real-time Dashboard
            <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Access to Bidding System -->
  <div class="my-6 grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="bg-blue-100 dark:bg-blue-900 p-3 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium">Bid Requests</h2>
          <p class="text-sm text-gray-500 dark:text-gray-400">Manage active bid requests</p>
        </div>
      </div>
      <p class="mt-4 text-sm text-gray-600 dark:text-gray-300">Create new bid requests, view active bids, and manage distribution settings.</p>
      <div class="mt-6">
        <%= link_to "View Bid Requests", dashboard_bid_requests_path, class: "btn btn-sm btn-outline w-full" %>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="bg-green-100 dark:bg-green-900 p-3 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium">Real-time Dashboard</h2>
          <p class="text-sm text-gray-500 dark:text-gray-400">Live bidding activity</p>
        </div>
      </div>
      <p class="mt-4 text-sm text-gray-600 dark:text-gray-300">Monitor real-time bid activity, track metrics, and see live bid feed.</p>
      <div class="mt-6">
        <%= link_to "Go to Real-time Dashboard", real_time_bid_dashboard_path, class: "btn btn-sm btn-outline w-full" %>
      </div>
    </div>
    
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
      <div class="flex items-center">
        <div class="bg-purple-100 dark:bg-purple-900 p-3 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <div class="ml-4">
          <h2 class="text-lg font-medium">Analytics & Reports</h2>
          <p class="text-sm text-gray-500 dark:text-gray-400">Historical performance data</p>
        </div>
      </div>
      <p class="mt-4 text-sm text-gray-600 dark:text-gray-300">View detailed analytics, generate reports, and analyze trends over time.</p>
      <div class="mt-6">
        <%= link_to "Activity Feed", activity_feed_index_path, class: "btn btn-sm btn-outline" %>
        <%= link_to "Campaign Dashboard", campaign_dashboard_path, class: "btn btn-sm btn-outline ml-2" %>
        <%= link_to "Bid Analytics", bid_dashboard_path, class: "btn btn-sm btn-outline ml-2" %>
        <%= link_to "View Reports", bid_reports_path, class: "btn btn-sm btn-outline ml-2" %>
      </div>
    </div>
  </div>

  <!-- Data Management Overview -->
  <div class="my-6">
    <h2 class="text-xl font-semibold text-gray-800 dark:text-white mb-4">Data Management</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Standard Fields Card -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <div class="flex items-center">
          <div class="bg-indigo-100 dark:bg-indigo-900 p-3 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-lg font-medium">Standard Fields</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <%= current_account.standard_fields.count %> fields configured
            </p>
          </div>
        </div>
        <p class="mt-4 text-sm text-gray-600 dark:text-gray-300">
          Manage fields that will be automatically added to all new verticals. Setup once, apply everywhere.
        </p>
        <div class="mt-6">
          <%= link_to "Manage Standard Fields", standard_fields_path, class: "btn btn-sm btn-outline w-full" %>
        </div>
      </div>
      
      <!-- Verticals Card -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <div class="flex items-center">
          <div class="bg-blue-100 dark:bg-blue-900 p-3 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-lg font-medium">Verticals</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <%= current_account.verticals.count %> verticals configured
            </p>
          </div>
        </div>
        <p class="mt-4 text-sm text-gray-600 dark:text-gray-300">
          Manage your industry verticals, field templates, and validation rules.
        </p>
        <div class="mt-6">
          <%= link_to "Manage Verticals", verticals_path, class: "btn btn-sm btn-outline w-full" %>
        </div>
      </div>
      
      <!-- Campaigns Card -->
      <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6">
        <div class="flex items-center">
          <div class="bg-green-100 dark:bg-green-900 p-3 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
            </svg>
          </div>
          <div class="ml-4">
            <h2 class="text-lg font-medium">Campaigns</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <%= current_account.campaigns.count %> campaigns configured
            </p>
          </div>
        </div>
        <p class="mt-4 text-sm text-gray-600 dark:text-gray-300">
          Manage your campaigns, fields, and distribution settings.
        </p>
        <div class="mt-6">
          <%= link_to "Manage Campaigns", campaigns_path, class: "btn btn-sm btn-outline w-full" %>
        </div>
      </div>
    </div>
  </div>
</div>
