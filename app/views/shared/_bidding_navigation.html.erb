<div class="mb-6 bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
  <div class="p-4 border-b border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-medium">Bidding System Navigation</h3>
    <p class="text-sm text-gray-500 dark:text-gray-400">Manage and monitor your lead bidding system</p>
  </div>
  
  <nav class="flex flex-col sm:flex-row">
    <%= link_to dashboard_bid_requests_path, 
        class: "px-4 py-3 flex items-center border-b sm:border-b-0 sm:border-r border-gray-200 dark:border-gray-700 #{current_page?(dashboard_bid_requests_path) ? 'bg-blue-50 dark:bg-blue-900/20 font-medium' : 'hover:bg-gray-50 dark:hover:bg-gray-700/30'}" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <div>
          <div>Bid Requests</div>
          <div class="text-xs text-gray-500 dark:text-gray-400">View & manage active bid requests</div>
        </div>
      </div>
    <% end %>
    
    <%= link_to bid_dashboard_path, 
        class: "px-4 py-3 flex items-center border-b sm:border-b-0 sm:border-r border-gray-200 dark:border-gray-700 #{current_page?(bid_dashboard_path) ? 'bg-blue-50 dark:bg-blue-900/20 font-medium' : 'hover:bg-gray-50 dark:hover:bg-gray-700/30'}" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <div>
          <div>Analytics Dashboard</div>
          <div class="text-xs text-gray-500 dark:text-gray-400">View historical bidding analytics</div>
        </div>
      </div>
    <% end %>
    
    <%= link_to real_time_bid_dashboard_path, 
        class: "px-4 py-3 flex items-center border-b sm:border-b-0 sm:border-r border-gray-200 dark:border-gray-700 #{current_page?(real_time_bid_dashboard_path) ? 'bg-blue-50 dark:bg-blue-900/20 font-medium' : 'hover:bg-gray-50 dark:hover:bg-gray-700/30'}" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <div>Real-time Dashboard</div>
          <div class="text-xs text-gray-500 dark:text-gray-400">Live bidding activity and metrics</div>
        </div>
      </div>
    <% end %>
    
    <%= link_to bid_reports_path, 
        class: "px-4 py-3 flex items-center #{current_page?(bid_reports_path) ? 'bg-blue-50 dark:bg-blue-900/20 font-medium' : 'hover:bg-gray-50 dark:hover:bg-gray-700/30'}" do %>
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <div>
          <div>Reports</div>
          <div class="text-xs text-gray-500 dark:text-gray-400">Detailed performance reports</div>
        </div>
      </div>
    <% end %>
  </nav>
</div>