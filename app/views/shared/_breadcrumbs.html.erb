<% if local_assigns[:breadcrumbs].present? && breadcrumbs.any? %>
  <nav class="flex items-center overflow-x-auto whitespace-nowrap py-3 px-4 md:px-0 text-sm font-medium text-gray-500 dark:text-gray-400 pb-2">
    <% breadcrumbs.each_with_index do |breadcrumb, index| %>
      <% if index > 0 %>
        <svg class="h-4 w-4 mx-2 text-gray-400 dark:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      <% end %>
      
      <% if breadcrumb[:path].present? %>
        <%= link_to breadcrumb[:title], breadcrumb[:path], class: "hover:text-gray-700 dark:hover:text-gray-300 truncate max-w-xs inline-block" %>
      <% else %>
        <span class="text-gray-900 dark:text-gray-200 truncate max-w-xs inline-block"><%= breadcrumb[:title] %></span>
      <% end %>
    <% end %>
  </nav>
<% end %>